{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "types": ["node", "react", "react-dom"], 
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "src/types/jsx.d.ts"],
  "exclude": ["node_modules"]
}
